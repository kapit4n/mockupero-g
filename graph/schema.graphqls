# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type GqlTodo {
  id: ID!
  text: String!
  done: Boolean!
  user: GqlUser!
}

type GqlUser {
  id: ID!
  name: String!
}

type Query {
  todos: [GqlTodo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): GqlTodo!
}
